{
  "name"             : "sprout/sprout",
  "description"      : "A flexible, seamless and easy to use multitenancy solution for Laravel",
  "type"             : "library",
  "require"          : {
    "php"              : "^8.2",
    "laravel/framework": "^11.0"
  },
  "require-dev"      : {
    "phpunit/phpunit"    : "^11.3",
    "orchestra/testbench": "^9.4",
    "larastan/larastan"  : "^2.9"
  },
  "license"          : "MIT",
  "autoload"         : {
    "psr-4": {
      "Sprout\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev"     : {
    "psr-4": {
      "Sprout\\Tests\\"                 : "tests",
      "Workbench\\App\\"                : "workbench/app/",
      "Workbench\\Database\\Factories\\": "workbench/database/factories/",
      "Workbench\\Database\\Seeders\\"  : "workbench/database/seeders/"
    }
  },
  "authors"          : [
    {
      "name" : "Ollie Read",
      "email": "code@ollieread.com"
    }
  ],
  "minimum-stability": "stable",
  "scripts"          : {
    "post-autoload-dump": [
      "@clear",
      "@prepare",
      "@php vendor/bin/testbench package:discover --ansi"
    ],
    "changelog"         : "conventional-changelog",
    "release"           : "conventional-changelog --commit",
    "release:patch"     : "conventional-changelog --patch --commit",
    "release:minor"     : "conventional-changelog --minor --commit",
    "release:major"     : "conventional-changelog --major --commit",
    "psalm"             : "@php vendor/bin/psalm --no-cache --no-reflection-cache",
    "phpstan"           : "@php vendor/bin/phpstan --memory-limit=2G",
    "static"            : [
      "psalm",
      "phpstan"
    ],
    "clear"             : "@php vendor/bin/testbench package:purge-skeleton --ansi",
    "prepare"           : "@php vendor/bin/testbench package:discover --ansi",
    "build"             : "@php vendor/bin/testbench workbench:build --ansi",
    "serve"             : [
      "Composer\\Config::disableProcessTimeout",
      "@build",
      "@php vendor/bin/testbench serve --ansi"
    ],
    "analyse"              : [
      "@php vendor/bin/phpstan analyse --verbose --ansi"
    ],
    "test"              : [
      "@php vendor/bin/phpunit"
    ]
  },
  "extra"            : {
    "laravel": {
      "providers": [
        "Sprout\\SproutServiceProvider"
      ]
    }
  }
}
