{
  "name"             : "sprout/sprout",
  "description"      : "A flexible, seamless and easy to use multitenancy solution for Laravel",
  "type"             : "library",
  "require"          : {
    "php"                            : "^8.2",
    "laravel/framework"              : "^11.32",
    "league/flysystem-path-prefixing": "^3.0"
  },
  "require-dev"      : {
    "phpunit/phpunit"    : "^11.0.1",
    "orchestra/testbench": "^9.4",
    "larastan/larastan"  : "^2.9",
    "infection/infection": "^0.29.8",
    "brianium/paratest"  : "^7.7"
  },
  "license"          : "MIT",
  "autoload"         : {
    "psr-4": {
      "Sprout\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev"     : {
    "psr-4": {
      "Sprout\\Tests\\"                 : "tests",
      "Workbench\\App\\"                : "workbench/app/",
      "Workbench\\Database\\Factories\\": "workbench/database/factories/",
      "Workbench\\Database\\Seeders\\"  : "workbench/database/seeders/"
    }
  },
  "authors"          : [
    {
      "name" : "Ollie Read",
      "email": "code@ollieread.com"
    }
  ],
  "minimum-stability": "stable",
  "scripts"          : {
    "post-autoload-dump": [
      "@clear",
      "@prepare",
      "@php vendor/bin/testbench package:discover --ansi"
    ],
    "clear"             : "@php vendor/bin/testbench package:purge-skeleton --ansi",
    "prepare"           : "@php vendor/bin/testbench package:discover --ansi",
    "build"             : "@php vendor/bin/testbench workbench:build --ansi",
    "serve"             : [
      "Composer\\Config::disableProcessTimeout",
      "@build",
      "@php vendor/bin/testbench serve --ansi"
    ],
    "analyse"           : [
      "@php vendor/bin/phpstan analyse --memory-limit=2G --verbose --ansi"
    ],
    "test"              : [
      "@clear",
      "@prepare",
      "@build",
      "@php vendor/bin/phpunit --testsuite=Unit,Feature"
    ],
    "mutation"          : [
      "@clear",
      "@prepare",
      "@build",
      "@php vendor/bin/infection --threads=12"
    ]
  },
  "extra"            : {
    "laravel"     : {
      "providers": [
        "Sprout\\SproutServiceProvider"
      ],
      "facades"  : [
        "Sprout\\Facades\\Sprout"
      ]
    },
    "branch-alias": {
      "dev-main": "1.x-dev"
    }
  },
  "config"           : {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
